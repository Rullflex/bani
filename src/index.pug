				ul.s1__list 
					li.s1__item.s1__item--1
						+picture(png, `${assets}s1-list-i1`, 'n').s1__item-img
						.s1__item-text Открытое производство с контролем#[br] качества в Саратове и Энгельсе
					li.s1__item.s1__item--2
						+picture(png, `${assets}s1-list-i2`, 'n').s1__item-img
						.s1__item-text Долговечность бани благодаря#[br] каркасу с винтилируемым зазором 
					li.s1__item.s1__item--3
						+picture(png, `${assets}s1-list-i3`, 'n').s1__item-img
						.s1__item-text Гарантия лучшей цены
				.s1__float 
					+picture(png, `${assets}s1-list-i4`, 'n').s1__float-img
