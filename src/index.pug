extends modules/layout/_layout

prepend head
	title Title your page
	meta(name="description", content="Описание страницы")

block header
	header.header 
		.container
			.header__row
				a.header__logo(href="/")
					+picture(png, `${assets}logo`, 'n')
				.header__contacts 
					+icon('hphones')
					div
						a.header__contacts-tel(href!=phoneLink)= phoneNumber
						.header__contacts-range Каждый день с 8:00-20:00


block content
	main.main
		section.s1 
			.container 
				+picture-min(jpg, `${assets}s1-bg`, `${assets}s1-bg`, 'sml').s1__img-bg
