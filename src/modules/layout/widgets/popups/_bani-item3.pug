+popup#bani-item3.banya
    .banya__about 
        .banya__head 
            .banya__head-title «Дачник»
            .banya__scales 
                .banya__scale
                    +picture(png, `${assetsIco}scales`, 'n').banya__scale-img--1
                    .banya__scale-text 1.6х2.2
                .banya__scale
                    +picture(png, `${assetsIco}user`, 'n').banya__scale-img--2
                    .banya__scale-text 3 чел.
        .banya__slider(data-uk-slider)
            - var numberOfItems = 5
            .banya__slider-container.uk-slider-container
                ul.uk-slider-items
                    - for (var i = 1; i <= numberOfItems; i++)
                        li.banya__slider-item
                            +picture(jpg, `${assets}banya3-i${i}`, 'n')
            .banya__slider-nav
                a.slidenav-btn.slidenav-prev.d-none.d-md-inline(href="#" data-uk-slider-item="previous")
                        +icon('angle-left')
                .slidegal
                    - for(var i = 1; i <= numberOfItems; i++)
                        .slidegal-item(class=`${i == 1 ? 'active' : ''}`)
                           +picture(jpg, `${assets}banya3-i${i}-min`, 'n')
                a.slidenav-btn.slidenav-next(href="#" data-uk-slider-item="next")
                    +icon('angle-right')

        .banya__price.d-md-none От #[strong 99 000]р.
        .banya__title Каркасная Баня «Семейная»
        .banya__dims 
            p - габариты 1.6х2.2
            p - вместимость 3 чел.
        .banya__points 
        .banya__newcomer.d-none.d-md-flex
            a.banya__btn.uk-button.btn-solid-primary(href="#callback" data-uk-toggle) Оставить заявку
